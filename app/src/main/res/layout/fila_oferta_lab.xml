<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tester"
        android:id="@+id/profesionTextView"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad a realizar"
        android:id="@+id/actividadTextView"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/profesionTextView"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horas:"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/actividadTextView"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max $/ Hora:"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/actividadTextView"
        android:layout_toEndOf="@+id/horasTextView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banderaImageView"
        android:src="@drawable/ar"
        android:layout_alignTop="@+id/maxPagoTextView"
        android:layout_toEndOf="@+id/maxPagoTextView"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha fin:"
        android:id="@+id/textView1"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- - - -"
        android:id="@+id/fechaTextView"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/textView1"
        android:layout_marginLeft="3dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:id="@+id/horasTextView"
        android:layout_below="@+id/actividadTextView"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="18sp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:id="@+id/maxPagoTextView"
        android:layout_below="@+id/actividadTextView"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En Ingles"
        android:id="@+id/enInglescheckBox"
        android:layout_alignTop="@+id/fechaTextView"
        android:layout_toEndOf="@+id/fechaTextView"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/fechaTextView"
        android:enabled="false"
        android:focusable="false"
        android:checked="false"/>

</RelativeLayout>